// ==========================================
// Zellij設定ファイル
// ==========================================

// ==========================================
// 基本設定
// ==========================================

// テーマ設定
theme "catppuccin-mocha"

// デフォルトシェル
default_shell "zsh"

// デフォルトレイアウト
default_layout "compact"

// ==========================================
// マウス設定
// ==========================================

// マウスサポートを有効化
mouse_mode true

// マウスホバー効果を有効化
// advanced_mouse_actions true

// 選択したテキストを自動的にクリップボードにコピー
copy_on_select true

// コピーコマンド（macOS用）
copy_command "pbcopy"

// コピー先をシステムクリップボードに
copy_clipboard "system"

// ==========================================
// スクロール設定
// ==========================================

// スクロールバック履歴を10000行に設定
scroll_buffer_size 10000

// ==========================================
// UI設定
// ==========================================

// ペインフレームを表示
pane_frames true

// セッション名をシリアライズ
session_serialization true

// ==========================================
// キーバインディング
// ==========================================
//
// デフォルトのキーバインド:
//   Ctrl+p: ペインモード
//     - n: 新規ペイン
//     - d: 下に分割
//     - r: 右に分割
//     - x: ペインを閉じる
//     - f: フルスクリーン切り替え
//     - h/j/k/l または 矢印: フォーカス移動
//     - H/J/K/L: ペインリサイズ
//
//   Ctrl+t: タブモード
//     - n: 新規タブ
//     - x: タブを閉じる
//     - r: タブ名変更
//     - h/l または 矢印: タブ移動
//
//   Ctrl+s: スクロールモード
//     - j/k: 上下スクロール
//     - Ctrl+d/u: 半ページスクロール
//     - Ctrl+f/b: 1ページスクロール
//     - /: 検索
//
//   Ctrl+o: セッションモード
//     - d: デタッチ
//     - w: セッションマネージャー
//
//   Ctrl+g: ロックモード（キーバインド無効化）
//   Ctrl+q: 終了
//
// ==========================================

keybinds {
    // ノーマルモードでのカスタムバインド
    normal {
        // Alt + 矢印でペイン移動（通常キーボード用）
        bind "Alt Left" { MoveFocus "Left"; }
        bind "Alt Right" { MoveFocus "Right"; }
        bind "Alt Up" { MoveFocus "Up"; }
        bind "Alt Down" { MoveFocus "Down"; }

        // HHKB/Vim風: Alt + h/j/k/lでペイン移動
        // h = 左, k = 上, l = 右, j = 下
        bind "Alt h" { MoveFocus "Left"; }
        bind "Alt k" { MoveFocus "Up"; }
        bind "Alt l" { MoveFocus "Right"; }
        bind "Alt j" { MoveFocus "Down"; }
    }
}
